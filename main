                else:
                    #f.write(str(t))
                    #f.write("\n")
                    #print("else")
                    #print(fList[tList.index(t)])
                    print(t in fList)
                    #print(t)
            #print(fList)



def main():
    print("VTC: $", mkt_p_usd("BTC-VTC"))
    #print("XVG: $", mkt_p_usd("BTC-XVG", 50))
    #print(usdt_btc_l())
